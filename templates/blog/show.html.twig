{% extends "base.html.twig" %}

{% block title %}Mon blog Symfony | Détail article{% endblock %}

{% block body %}

    <h1 class="display-4 text-center my-4">{{ article.title }}</h1>

      <div class="col-md-12">
          <div class="card mb-4 shadow-sm">
            <img src="{{ article.image|replace({'200/300': '1000/300'}) }}" alt="">
            <div class="card-body">
                <p class="card-text">{{ article.content|raw }}</p>
            </div>
            <small class="text-muted">Publié le {{ article.createdAt|date('d/m/Y')}} à {{ article.createdAt|date('H:i:s') }}</small>
          </div>
      </div>




{% endblock %}